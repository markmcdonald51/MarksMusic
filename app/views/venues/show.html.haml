        %img{src: "http://placehold.it/250x250&text=Thumbnail"}/
        %h6.panel Description
      / End Thumbnails
.row
  .large-12.columns
    .row
      / Content
      .large-8.columns
        .panel.radius
          .row
            .large-6.small-6.columns
              %h4= @venue.name
              %hr/
              %h5.subheader= [@venue.location.address_one, @venue.location.address_two].join(',')
              %h5.subheader= [@venue.location.city, @venue.location.state].join(',')
              %h5.subheader= @venue.phone

              .show-for-small{style: "text-align: center"}
                %a.small.radius.button{href: "#"} Call To Action!
                %br/
                %a.small.radius.button{href: "#"} Call To Action!
            .large-6.small-6.columns
              %p= @venue.description
                
      .large-4.columns.hide-for-small
        %h4 Get In Touch!
        %hr/
        = link_to 'Book an Event here!', new_venue_event_path(@venue)
        %a{href: "#"}
          .panel.radius.callout{style: "text-align: center"}
            %strong Call To Action!
      / End Content
